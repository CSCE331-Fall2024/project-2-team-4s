<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
    prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21"
    xmlns:fx="http://javafx.com/fxml/1" fx:controller="team4s.ReportsController">
    <children>
        <Button mnemonicParsing=" false" onAction="#switchToManager" text="Manager" />
        <!-- tab automatically positioned at the top -->
        <TabPane>
            <tabs>
                <Tab text="Reports" closable="false">
                    <VBox alignment="CENTER" prefWidth="600" prefHeight="400">
                        <!-- area to display the generated chart -->
                        <VBox fx:id="chartArea" alignment="CENTER">
                            <!-- the chart will be dynamically added here -->
                        </VBox>

                        <!-- buttons for customizing/exporting -->
                        <HBox alignment="CENTER" spacing="10">
                            <Button text="Customize Report" onAction="#showReportCustomizer" />
                            <Button text="Export Report" onAction="#exportReport" />
                        </HBox>
                    </VBox>
                </Tab>
            </tabs>
        </TabPane>
    </children>
</VBox>