<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="team4s.SceneController">
    <children>
        <!-- TabPane with 4 tabs, automatically positioned at the top -->
        <TabPane>
            <tabs>

                <Tab text="Menu" closable="false">
                  <VBox alignment="CENTER" spacing="10">
                     <!-- Table for displaying menu items -->
                     <TableView fx:id="menuTable" prefWidth="600" prefHeight="400">
                        <columns>
                              <TableColumn fx:id="itemIdColumn" text="ID">
                                 <cellValueFactory>
                                    <PropertyValueFactory property="menu_item_id"/>
                                 </cellValueFactory>
                              </TableColumn>
                              <TableColumn fx:id="currentServingsColumn" text="Servings">
                                 <cellValueFactory>
                                    <PropertyValueFactory property="current_servings"/>
                                 </cellValueFactory>
                              </TableColumn>
                              <TableColumn fx:id="itemNameColumn" text="Name">
                                 <cellValueFactory>
                                    <PropertyValueFactory property="item_name"/>
                                 </cellValueFactory>
                              </TableColumn>
                              <TableColumn fx:id="itemPriceColumn" text="Price">
                                 <cellValueFactory>
                                    <PropertyValueFactory property="item_price"/>
                                 </cellValueFactory>
                              </TableColumn>
                              <TableColumn fx:id="itemCategoryColumn" text="Category">
                                 <cellValueFactory>
                                    <PropertyValueFactory property="item_category"/>
                                 </cellValueFactory>
                              </TableColumn>
                        </columns>
                     </TableView>

                     <!-- Button to open the Add Item dialog -->
                     <HBox alignment="CENTER" spacing="10"> 
                        <children>
                            <Button text="Add Item" onAction="#showAddItemDialog"/>
                            <Button text="Edit Item" onAction="#showEditItemDialog" />
                            <Button mnemonicParsing="false" text="Delete Item" onAction="#handleDeleteItem"/>
                        </children>
                    </HBox>

                  </VBox>
               </Tab>

                <Tab text="Inventory" closable="false">
                    <VBox alignment="CENTER">
                        <children>
                            <Label text="Content for Tab 2" />
                        </children>
                    </VBox>
                </Tab>
                <Tab text="Employees" closable="false">
                    <VBox alignment="CENTER">
                        <children>
                            <Label text="Content for Tab 3" />
                        </children>
                    </VBox>
                </Tab>
                <Tab text="Reports" closable="false">
                    <VBox alignment="CENTER">
                        <children>
                            <Label text="Content for Tab 4" />
                        </children>
                    </VBox>
                </Tab>
            </tabs>
        </TabPane>

        <!-- Button to switch back to the menu -->
        <HBox  spacing="50">
            <Button mnemonicParsing="false" text="Go Back To Menu" onAction="#switchToMenu"/>
        </HBox>
    </children>
</VBox>
