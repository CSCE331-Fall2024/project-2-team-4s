<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<HBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
    minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21"
    xmlns:fx="http://javafx.com/fxml/1" fx:controller="team4s.EmployeeController">
    <children>
        <Button mnemonicParsing="false" onAction="#switchToManager" text="Manager" />
        <!-- tab automatically positioned at the top -->
        <TabPane>
            <tabs>
                <Tab text="Employees" closable="false">
                    <VBox alignment="CENTER" spacing="10">
                        <TableView fx:id="employeeTable" prefWidth="600" prefHeight="400">
                            <columns>
                                <TableColumn fx:id="employeeIDColumn" text="ID">
                                    <cellValueFactory>
                                        <PropertyValueFactory property="employeeID" />
                                    </cellValueFactory>
                                </TableColumn>
                                <TableColumn fx:id="employeeFirstNameColumn" text="First name">
                                    <cellValueFactory>
                                        <PropertyValueFactory property="firstName" />
                                    </cellValueFactory>
                                </TableColumn>
                                <TableColumn fx:id="employeeLastNameColumn" text="Last Name">
                                    <cellValueFactory>
                                        <PropertyValueFactory property="lastName" />
                                    </cellValueFactory>
                                </TableColumn>
                                <TableColumn fx:id="employeeRoleColumn" text="Role">
                                    <cellValueFactory>
                                        <PropertyValueFactory property="role" />
                                    </cellValueFactory>
                                </TableColumn>
                            </columns>
                        </TableView>

                        <!-- buttons for editing employee data -->
                        <HBox alignment="CENTER" spacing="10">
                            <Button text="Add Employee" onAction="#showAddEmployeeModal" />
                            <Button text="Edit Employee" onAction="#showEditEmployeeModal" />
                            <Button text="Delete Employee" onAction="#showDeleteEmployeeModal" />
                        </HBox>
                    </VBox>
                </Tab>
            </tabs>
        </TabPane>
    </children>
</HBox>